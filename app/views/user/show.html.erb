    <%= render "shared/header" %>
    
    <div class="show-wrapper">
      <h2 class="page-heading">ユーザー詳細画面</h2>
        
      <div class="user-show">
        <div class="user-detail">
          ニックネーム
        <%= @user.nickname %>
        </div>


        <div class="user-detail">
          紹介文
        <%= @user.profile %>
        </div>
      </div>

      <div class="book_show_lists">
      <% @books.each do |book| %>
        <li class='list'>
          <%= link_to book_path(book.id)  do %>
          <div class='book-img-view'>
            <%= image_tag book.image.variant(resize: '250x250'), class: "book_image" %>

            <div class='book-information'>
              <div class='book-nickname'>
                <span>タイトル<br> <%= book.title %><br> ジャンル<br>  <%= book.genre.name%></span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
      </div>
      


    </div>

    <%= render "shared/footer"%>


